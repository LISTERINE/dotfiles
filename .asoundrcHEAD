pcm.dmixer {
    type dmix
    ipc_key 1024 # must be unique!
   slave {
        pcm {
        type hw
        card U0x47f0xad01 # name of the card, see aplay -L
        device 0
    } 
    buffer_size 4096 # needs to be set!
    }
}

ctl.equal {
  type equal;
}

pcm.plugequal {
  type equal
  slave.pcm "plug:dmixer" 
  #needs "plug:" cause of floating point transition
}

ctl.!default {
    type hw
    card U0x47f0xad01
}

pcm.!default {
  type plug
  slave.pcm plugequal
}
